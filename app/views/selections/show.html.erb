<%= @selection.id %>
<%= @selection.user_id %>
<%= @selection.name %>

<div class="container" data-controller="send-emails" data-send-emails-selection-value="<%= @selection.id %>">
  <div class="row" >
      <%= link_to "Retourner à la liste des sélections", selections_path, class: "btn btn-primary" %>
      <%= link_to "Ajouter des restaurants à la selection", results_path(selection_id: @selection.id), class: "btn btn-primary mt-2 mb-2" %>
  </div>

  <div>
    <h2 class="text-center">Restaurants selectionnés : </h2>
    Restaurant card
    score vote restaurant
    <div class="row justify-content-around">
      <% @selection.restaurants.each do |restaurant| %>
        <div class="card" style="width: 18rem;margin-bottom:20px;">
          <img class="card-img-top card-image" src=<%= restaurant.image_url %> alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <p class="card-text">Prix: <%= restaurant.price %></p>
            <p class="card-text">Note: <%= restaurant.rating %></p>
            <a href="<%= restaurant.url %>" target="blank" class="btn btn-primary">En savoir plus</a>
            <p>score</p>
            <%= link_to "Supprimer #{restaurant.name}",
                        restaurant_path(restaurant, selection_id: @selection.id),
                        method: :delete,
                        data: { confirm: "Êtes-vous sûr ?" },
                        class: "btn btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div >

    <div id="guests">
    <h2>Invités </h2>
      <% if @selection.guests.blank? %>
        Commencer à ajouter des invités à la sélection <%= @selection.name %>
        <%= simple_form_for([@selection, @guest], remote: true) do |f| %>
          <%= f.input :name %>
          <%= f.input :email %>
          <%= f.button :submit, "Ajouter un invité", class: "mt-2" %>
        <% end %>
      <% else %>
          <%= simple_form_for([@selection, @guest], remote: true) do |f| %>
          <%= f.input :name %>
          <%= f.input :email %>
          <%= f.button :submit, "Ajouter un invité", class: "mt-2" %>
        <% end %>
        <div class="guests-list">
        <% @selection.guests.each do |guest| %>
          <p  id="guest-<%= guest.id %>"><%= guest.name %> <%= guest.email %></p>
          <p data-send-emails-target="email"><%= guest.email %></p>
          <%= link_to "Delete", guest_path(guest, selection_id: @selection.id), method: :delete, remote: true %>
        <% end %>
        </div>
      <% end %>
    </div>
      <button data-action="send-emails#sendEmails">Envoyer les invitations</button>
    Fetch method in selection_controller, which send emails to each guest to guest

  <div>
</div>
