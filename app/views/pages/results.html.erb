<div class="container" data-controller="refresh-list crud-restaurants" >
  <div class="row">
    <div class="col-7" >
      <%= link_to 'Voir ma liste', selection_path(params[:selection_id]), class: "btn btn-primary mt-2" %>
      <h2 class="mt-3">Cherchez un restaurant en entrant un type de nourriture et un lieu, puis ajoutez le à votre sélection</h2>
      <form>
        <div class="row mt-5">
          <div class="col">
            <input value="Thai" type="text" class="mb-2 form-control " placeholder="Type de cuisine" data-refresh-list-target="searchInput">
          </div>
          <div class="col">
            <input  value="Bordeaux" type="text" class="form-control" placeholder="Ville" data-refresh-list-target="searchPlace" required>
          </div>
        </div>
        <div>
          <button type="submit" class="btn btn-primary" data-action="refresh-list#postSearch">Trouver des restaurants</button>
        </div>
      </form>
      <div class="mt-5 mb-3">
        <h2>Pas d'inspiration ? Laissez le hasard décider pour vous !</h2>
        <form>
          <div class="row mt-1 mb-2">
            <div class="col ">
              <input  type="text" class="form-control" placeholder="Ville" data-refresh-list-target="searchPlace2" required>
            </div>
          </div>
          <div>
            <button type="submit" class="btn btn-primary" data-action="refresh-list#postSearchRandom">Trouve-moi un restau !</button>
          </div>
        </form>
      </div>

      <div class="">
        <div class="row justify-content-around" data-refresh-list-target="list"></div>
      </div>
    </div>

    <div class="col-5">

      <div class="mt-3" style="width: 100%; height: 600px; position: sticky;
  top: 25px;"
        data-refresh-list-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
        data-refresh-list-target="containerMap"
        >

      </div>
      <%# <div>
        <img  class="img-fluid" src="https://source.unsplash.com/random/300×300" alt="">
      </div> %>
    </div>

  </div>
</div>
