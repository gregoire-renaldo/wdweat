
<div class="container">
  <h1>Voir mes sélections, et créer des sélections<br>
  </h1>

  <%= link_to 'Créer nouvelle sélection', new_selection_path, class: "btn btn-primary rounded" %>

  <div>
  <h2>Mes sélections</h2>
    <ul>
      <% @selections&.each do |selection| %>
        <%= link_to(selection_path(selection)) do %>
          <li><%= selection.name %> <%= selection.date.strftime('%d/%m/%y %H:%M') %></li>
        <% end %>
          Nombre de restaurants selectionnés <%= selection.restaurants.count %>
          <%= link_to "Delete #{selection.name}",
              selection_path(selection),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
      <% end %>
    </ul>
  </div>
</div>
